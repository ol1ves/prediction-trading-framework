# KALSHI CONFIG
KALSHI_API_KEY=your_kalshi_api_key_here

# Use demo API (https://demo-api.kalshi.co). Set to false for production (https://api.kalshi.com)
KALSHI_USE_DEMO=true

# Kalshi Private Key (PEM format) - IMPORTANT: Include the full PEM key with \n for line breaks
# Format: KALSHI_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nMIIEpAIBAAKCAQEA...\n-----END RSA PRIVATE KEY-----"
KALSHI_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_content_here\n-----END RSA PRIVATE KEY-----"

# OPTIONAL KALSHI CONFIG
# Max requests per second
KALSHI_RATE_LIMIT=20

# Max attempts for one request
KALSHI_MAX_ATTEMPT=5

# Initial retry delay (seconds)
KALSHI_BASE_DELAY=0.5

# Exponential backoff multiplier
KALSHI_BACKOFF_MULTIPLIER=2.0

# Total delay before failing for a single request (seconds)
KALSHI_MAX_DELAY=30.0

# Default depth to query the orderbook
KALSHI_ORDERBOOK_DEPTH=10

# DEMO RUNTIME (optional)
# These are used by `src/main.py` to place a tiny demo order.
# NOTE: You should set DEMO_TICKER to a real/open ticker in Kalshi demo.
# NOTE: This is a demo and will be removed in the future.
DEMO_TICKER=YOUR_DEMO_TICKER_HERE
DEMO_SIDE=yes
DEMO_LIMIT_PRICE=0.10